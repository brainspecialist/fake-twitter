<% @users.each do |user| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <div class='col-md-3'>
        <%= image_tag user.avatar.url, class: "user-pic-md img-responsive" %>
      </div>
      <div class='col-md-3'>
        <%= link_to show_user_path(id: user.id) do %>
          <h3><%= user.name %></h3>
          <p>@<%= user.username %></p>
        <% end %>
        <p><%= user.bio %></p>
      </div>
      <span class='pull-right'>
        <% if current_user.id != user.id %>
      	  <% if @following.include?(user.id) %>
            <%= link_to "Following", unfollow_path(id: user.id), class: "btn btn-primary", id: "unfollow_btn" %>
          <% else %>
              <%= link_to "Follow", now_following_path(id: user.id), class: "btn btn-primary" %>
          <% end %>
        <% end %>
      </span>
    </div>
  </div>
<% end %>