<div class="row">
  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= render 'profile', user: current_user %>
        <%= render 'stats', user: current_user %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
  	<div class="panel panel-info">
      <div class="panel-body">
      <%= render 'tweets/form', tweet: @tweet %>
      </div>
    </div>
    <% @following_tweets.each do |tweet| %>
  	  <%= render 'tweets/tweet', tweet: tweet %>
    <% end %>
  </div>
</div>