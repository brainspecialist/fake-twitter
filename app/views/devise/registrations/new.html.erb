<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, placeholder: "Your Email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :name, placeholder: "Your Name", class: "form-control" %>
  </div>

  <div class="input-group">
  <span class="input-group-addon" id="basic-addon1">@</span>
    <%= f.text_field :username, placeholder: "Choose a @username", class: "form-control" %>
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br /><br />

  <div class="form-group"> 
    <%= f.password_field :password, autocomplete: "off", placeholder: "Choose a password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
